	<headerPattern>src/BulletPhysics/BulletSoftBody/*.cpp</headerPattern>
	<headerPattern>src/BulletPhysics/BulletLinearMath/*.cpp</headerPattern>
	<headerPattern>src/BulletPhysics/vectormath/neon/*.cpp</headerPattern>
	<headerPattern>src/BulletPhysics/vectormath/scalar/*.cpp</headerPattern>
	<headerPattern>src/BulletPhysics/vectormath/sse/*.cpp</headerPattern>
	<sourcePattern>src/Cinder-Bullet3D/*.cpp</sourcePattern>

	<includePath>src/</includePath>
	<includePath>src/Cinder-Bullet3D/</includePath>
	<includePath>src/BulletPhysics/</includePath>
	
	<platform os="ios">
		<platform config="Debug">
			<staticLibrary>lib/ios/libBulletCollision_debug.a</staticLibrary>
			<staticLibrary>lib/ios/libBulletDynamics_debug.a</staticLibrary>
			<staticLibrary>lib/ios/libBulletSoftBody_debug.a</staticLibrary>
			<staticLibrary>lib/ios/libLinearMath_debug.a</staticLibrary>
		</platform>
		<platform config="Release">
			<staticLibrary>lib/ios/libBulletCollision.a</staticLibrary>
			<staticLibrary>lib/ios/libBulletDynamics.a</staticLibrary>
			<staticLibrary>lib/ios/libBulletSoftBody.a</staticLibrary>
			<staticLibrary>lib/ios/libLinearMath.a</staticLibrary>
		</platform>
	</platform>
	<platform os="macosx">
		<platform config="Debug">
			<staticLibrary>lib/macosx/libBulletCollision_x64_debug.a</staticLibrary>
			<staticLibrary>lib/macosx/libBulletDynamics_x64_debug.a</staticLibrary>
			<staticLibrary>lib/macosx/libBulletSoftBody_x64_debug.a</staticLibrary>
			<staticLibrary>lib/macosx/libLinearMath_x64_debug.a</staticLibrary>
		</platform>
