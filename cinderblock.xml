		<platform config="Debug">
			<staticLibrary>lib/msw/x64/BulletCollision_vs2010_x64_debug.lib</staticLibrary>
			<staticLibrary>lib/msw/x64/BulletDynamics_vs2010_x64_debug.lib</staticLibrary>
			<staticLibrary>lib/msw/x64/BulletSoftBody_vs2010_x64_debug.lib</staticLibrary>
			<staticLibrary>lib/msw/x64/LinearMath_vs2010_x64_debug.lib</staticLibrary>
		</platform>
		<platform config="Release">
			<staticLibrary>lib/msw/x64/BulletCollision_vs2010_x64_release.lib</staticLibrary>
			<staticLibrary>lib/msw/x64/BulletDynamics_vs2010_x64_release.lib</staticLibrary>
