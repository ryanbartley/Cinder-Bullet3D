	<headerPattern>src/BulletPhysics/BulletDynamics/ConstraintSolver/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/BulletDynamics/Dynamics/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/BulletDynamics/FeatherStone/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/BulletDynamics/MLCPSolvers/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/BulletDynamics/Vehicle/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/BulletSoftBody/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/BulletLinearMath/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/vectormath/neon/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/vectormath/scalar/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/vectormath/sse/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/vectormath/*.h</headerPattern>
	<headerPattern>src/Cinder-Bullet3D/*.h</headerPattern>
	
	<headerPattern>src/BulletPhysics/BulletCollision/BroadPhaseCollision/*.cpp</headerPattern>
	<headerPattern>src/BulletPhysics/BulletCollision/CollisionDispatch/*.cpp</headerPattern>
	<headerPattern>src/BulletPhysics/BulletCollision/CollisionShapes/*.cpp</headerPattern>
	<headerPattern>src/BulletPhysics/BulletCollision/GImpact/*.cpp</headerPattern>
	<headerPattern>src/BulletPhysics/BulletCollision/NarrowPhaseCollision/*.cpp</headerPattern>
	<headerPattern>src/BulletPhysics/BulletDynamics/Character/*.cpp</headerPattern>
