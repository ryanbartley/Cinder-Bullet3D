<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
<block
	name="Bullet 3D Physics"
	id="org.libcinder.bullet"
	author="Ryan Bartley"
	version="3.0"
	>
	<supports os="ios" />
	<supports os="macosx" />
	<supports os="msw" />
	
	<headerPattern>src/BulletPhysics/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/BulletCollision/BroadPhaseCollision/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/BulletCollision/CollisionDispatch/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/BulletCollision/CollisionShapes/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/BulletCollision/GImpact/*.h</headerPattern>
	<headerPattern>src/BulletPhysics/BulletCollision/NarrowPhaseCollision/*.h</headerPattern>
